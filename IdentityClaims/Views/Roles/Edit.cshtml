@model IdentityClaims.Models.UsersViewModels.RolesListViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<h4>Roles</h4>
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Edit", "Roles", FormMethod.Post, new { rlvm = Model }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">

                @Html.LabelFor(model => model.RoleName, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.RoleName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        }
    </div>
</div>
@Html.ActionLink("Back To List", "Index")

